{% extends 'layout/app.html.twig' %}
{% block PAGE_CSS %}
  <link rel="stylesheet" href="/build/blog-listing.css">
{% endblock %}

{% block CONTENT_MID %}
  <!-- BLOG LISTING START -->
  <div class="container-fluid">
    <div class="row-cols-auto">
      <h1 class="text-center mt-5 mb-5"><b>Blog</b></h1>
      <hr>
    </div>
    <div class="row">
      <div class="col-2">
        <form class="blog-search-form">
          <input type="hidden" class="blog-sort-by-hidden" name="sortBy" value="">
          <input type="hidden" class="blog-per-page-hidden" name="perPage" value="">
          <fieldset>
            <legend>Filters</legend>
            <div class="mb-3">
              <label for="search" class="form-label">Search blog posts</label>
              <input type="text" id="search" class="form-control" placeholder="Search blog posts">
            </div>
            <div class="mb-3">
              <label for="categories" class="form-label">Select categories</label>
              <select id="categories" class="form-select categories-select" name="categories[]" multiple>
                <option>Category 1</option>
                <option>Category 2</option>
                <option>Category 3</option>
              </select>
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
          </fieldset>
        </form>
      </div>
      <div class="col-8">
        <div class="row justify-content-end">
          <div class="col-3 mb-3">
            <label for="perPage" class="form-label">Per page</label>
            <select id="perPage" class="form-select blog-per-page" name="perPage">
              <option>9</option>
              <option>18</option>
              <option>36</option>
            </select>
          </div>
          <div class="col-3 mb-3">
            <label for="sortBy" class="form-label">Sort by</label>
            <select id="sortBy" class="form-select blog-sort-by" name="sortBy">
              <option>Latest</option>
              <option>Oldest</option>
            </select>
          </div>
        </div>
        <!-- BLOG CARDS START -->
        <div class="row">
          <div class="col-4">
            <div class="card mb-3">
              <img src="https://via.placeholder.com/414x227" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">Blog title</h5>
                <p class="card-text">Blog short description..</p>
                <p class="card-text"><small class="text-muted">Posted: 3 mins ago</small></p>
                <a href="blog-single.html" class="btn btn-primary stretched-link">Read more</a>
                <hr>
                <span class="pe-2">Tags:</span>
                <span class="badge bg-secondary">Pimcore</span>
                <span class="badge bg-secondary">Blog</span>
                <span class="badge bg-secondary">Example</span>
              </div>
            </div>
          </div>
          <div class="col-4">
            <div class="card mb-3">
              <img src="https://via.placeholder.com/414x227" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">Blog title</h5>
                <p class="card-text">Blog short description..</p>
                <p class="card-text"><small class="text-muted">Posted: 3 mins ago</small></p>
                <a href="blog-single.html" class="btn btn-primary stretched-link">Read more</a>
                <hr>
                <span class="pe-2">Tags:</span>
                <span class="badge bg-secondary">Pimcore</span>
                <span class="badge bg-secondary">Blog</span>
                <span class="badge bg-secondary">Example</span>
              </div>
            </div>
          </div>
          <div class="col-4">
            <div class="card mb-3">
              <img src="https://via.placeholder.com/414x227" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">Blog title</h5>
                <p class="card-text">Blog short description..</p>
                <p class="card-text"><small class="text-muted">Posted: 3 mins ago</small></p>
                <a href="blog-single.html" class="btn btn-primary stretched-link">Read more</a>
                <hr>
                <span class="pe-2">Tags:</span>
                <span class="badge bg-secondary">Pimcore</span>
                <span class="badge bg-secondary">Blog</span>
                <span class="badge bg-secondary">Example</span>
              </div>
            </div>
          </div>
        </div>
        <!-- BLOG CARDS END -->
        <!-- PAGINATION START -->
        <div class="row">
          <div class="col-3">
            Showing 1 to 9 of 33 results
          </div>
          <div class="col-6">
            <nav aria-label="Page navigation example">
              <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                  <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                  <a class="page-link" href="#">Next</a>
                </li>
              </ul>
            </nav>
          </div>
        </div>
        <!-- PAGINATION END -->
      </div>
    </div>
  </div>
  <!-- BLOG LISTING END -->
{% endblock %}

{% block PAGE_JS %}
  <script src="/build/blog-listing.js"></script>
{% endblock %}