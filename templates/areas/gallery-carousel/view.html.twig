<section class="area-gallery-carousel">

  {% set selectStore = [] %}
  {% for i in 2..29 %}
    {% set selectStore = selectStore|merge([i]) %}
  {% endfor %}

  {% set slidesSelect = pimcore_select('slides', {
      store: selectStore,
      reload: true,
      width: 70,
      class: 'align-middle'
    })
  %}

  {% set showPreviewsCheckbox = pimcore_checkbox('showPreviews', {class: 'align-middle pt-7'}) %}
  {% set showPreviews = showPreviewsCheckbox.isChecked and not editmode %}

  {% set id = 'gallery-carousel-' ~ uniqueid() %}
  {% set slides = slidesSelect.getData()|default(2) %}

  {% if editmode %}
    <div class="alert alert-secondary col-xs-12" style="height: 75px;">
      <div class="col-xs-6 d-inline-flex mx-auto">
        <span class="editmode-label align-middle">How many images do you want to show?</span>
        {{ slidesSelect|raw }}
      </div>
      <div class="col-xs-6 d-inline-flex">
        <span class="editmode-label align-middle">Show previews?</span>
        {{ showPreviewsCheckbox|raw }}
      </div>
    </div>
  {% endif %}

  <!-- CAROUSEL START -->
  <div id="{{ id }}" class="carousel slide mb-0" data-bs-ride="carousel" {{ editmode ? 'data-bs-interval="false"' : '' }}>
    <div class="carousel-indicators" {{ showPreviews ? 'preview visible-lg' : '' }}>
      {% for i in 1..(slides - 1) %}
        <button type="button" data-bs-target="#{{ id }}"
                data-bs-slide-to="{{ i }}" class="{{ loop.first ? 'active' : '' }}">
          {% if showPreviews %}
            {{
              pimcore_image('image_'~i, {
                thumbnail: 'galleryCarouselPreview'
              })
            }}
          {% endif %}
        </button>
      {% endfor %}
    </div>
    <div class="carousel-inner">
      {% for i in 1..(slides - 1) %}
        <div class="carousel-item {{ id ~ '-' ~ i }} {{ loop.first ? 'active' : '' }}">

          {{
            pimcore_image('image_'~i, {
              thumbnail: 'galleryCarousel',
              hidetext: true,
              dropClass: id ~ '-' ~ i,
              imageAttributes: {class: 'd-block w-100'}
            })
          }}

          <div class="container">
            <div class="carousel-caption {{ pimcore_select('text_location' ~ i).getData() }} {{ showPreviews ? 'vh-100' }}">
              {% if editmode %}
                {{
                  pimcore_select("text-location" ~ i, {
                    store: [
                      ["text-center", "Text Center"],
                      ["text-start", "Text Start"],
                      ["text-end", "Text End"]
                    ],
                    defaultValue: "text-center",
                    reload: true
                  })
                }}
              {% endif %}
              <h3>{{ pimcore_input("caption_title_" ~ i) }}</h3>
              <p class="hero-text">{{ pimcore_textarea('caption_text_' ~ i) }}</p>
              <p>
                {{
                  pimcore_link('caption_link_' ~ i, {
                    class: 'btn btn-lg btn-primary'
                  })
                }}
              </p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#{{ id }}" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#{{ id }}" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  <!-- CAROUSEL END -->
</section>